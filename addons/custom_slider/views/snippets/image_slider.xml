<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="image_snippet_slider" name="Custom Slider">
        <section class="custom-slider-snippet">
            <div class="slider-container">
                <div class="slider-track">
                    <img src="/custom_slider/static/src/img/slider-1.jpg" class="slide" />
                    <img src="/custom_slider/static/src/img/slider-2.jpg" class="slide" />
                    <img src="/custom_slider/static/src/img/slider-3.jpg" class="slide" />
                </div>
            </div>
            <div class="nav text-center m-4 gap-2">
                <button class="slider-prev btn btn-primary px-2 rounded-circle">Prev</button>
                <button class="slider-next btn btn-primary px-2 rounded-circle">Next</button>
            </div>
        </section>
    </template>
</odoo>